1. grep -v HOH 5ee2.pdb > 5EE2_clean.pdb                                                    #PREPARE THE TOPOLOGY
2. gmx pdb2gmx -f 5EE2_clean.pdb -o 15EE2_processed.gro -water spce                         #PREPARE THE TOPOLOGY
3. gmx editconf -f 5EE2_processed.gro -o 5EE2_newbox.gro -c -d 1.0 -bt cubic                #deffine box and solvate
4. gmx solvate -cp 5EE2_newbox.gro -cs spc216.gro -o 5EE2_solv.gro -p topol.top             #DEFINING THE UNIT CELL & ADDING SOLVENT
5.gmx grompp -f ions.mdp -c 5EE2_solv.gro -p topol.top -o ions.tpr                          #adding ions
6.gmx genion -s ions.tpr -o 5EE2_solv_ions.gro -p topol.top -pname NA -nname CL neutral      
7. gmx grompp -f minim.mdp -c 5EE2_solv_ions.gro -p topol.top -o em.tpr
8.gmx mdrun -v -deffnm em
9.gmx energy -f em.edr -o potential.xvg
xmgrace potential.xvg             #to visualize 
10. gmx grompp -f nvt.mdp -c em.gro -r emigre -p topol.top -o nvt.tpr # equilibration
11.gmx mdrun -deffnm nvt
12.gmx energy -f nvt.edr -o temperature.xvg
13. xmgrace temperature.xvg
14.gmx grompp -f npt.mdp -c nvt.gro -r nvt.gro -t nvt.cpt -p topol.top -o npt.tpr 
15.gmx mdrun -deffnm npt
16.gmx energy -f nvt.edr -o temperature.xvg
17.gmx energy -f npt.edr -o density.xvg
18.gmx grompp -f md.mdp -c npt.gro -t npt.cpt -p topol.top -o md_0_1.tpr
19.gmx mdrun -deffnm md_0_1
20.gmx trjconv -s md_0_1.tpr -f md_0_1.xtc -o md_0_1_noPBC.xtc -pbc mol -center
21.gmx rms -s md_0_1.tpr -f md_0_1_noPBC.xtc -o rmsd.xvg -tu ns
22.gmx rms -s em.tpr -f md_0_1_noPBC.xtc -o rmsd_xtal.xvg -tu ns
23.gmx gyrate -s md_0_1.tpr -f md_0_1_noPBC.xtc -o gyrate.xvg
  
